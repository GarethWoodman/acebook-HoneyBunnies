
<div class="d-flex justify-content-center">

  <div class='my-5'>
    <%= form_for @user, url: sessions_path, method: :post do |f| %>
    
    <div class='ace-logo'>
      <h1>Log in</h1>
    </div>
      <div class='row'>
        <div class='ml-2 my-2'>
          <%= f.text_field :email, placeholder: 'Email', id: 'first_email' %>
          <%= f.password_field :password, placeholder: 'Password', id: 'first_password' %>
          <%= f.submit 'Sign in', class: 'btn btn-primary ace-blue' %>
        </div>

      </div>
    <% end %>
  </div>

</div>
